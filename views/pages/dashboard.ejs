<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wardrobe Dashboard</title>
  <link rel="stylesheet" href="css/dashboard.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="container">
    <h1>Wardrobe Dashboard</h1>

    <!-- Grid Layout -->
    <div class="grid-container">
      <!-- Left Section: Wardrobe Overview -->
      <div class="wardrobe-overview">
        <div class="dashboard-section dbs-overview">
          <h2>Wardrobe Overview</h2>
          <p><strong>Total Items:</strong> <%= data.totalItems %></p>
          <p><strong>Most Used Item:</strong> <%= data.mostUsedItem.name %> (Used <%= data.mostUsedItem.usageCount %> times)</p>
          <p><strong>Least Used Item:</strong> <%= data.leastUsedItem.name %> (Used <%= data.leastUsedItem.usageCount %> time)</p>
        </div>
      </div>

      <!-- Right Section: Category Breakdown and Sustainability Score -->
      <div class="right-section">
        <div class="right-grid">
          <div class="dashboard-section">
            <h2>Category Breakdown</h2>
            <canvas id="categoryChart" style="max-height: 200px;"></canvas>
          </div>

          <div class="dashboard-section">
            <h2>Sustainability Score</h2>
            <canvas id="sustainabilityChart" style="max-height: 200px;"></canvas>
            <p>Your wardrobe's sustainability score is <strong><%= data.sustainabilityScore %> out of 100</strong>.</p>
            <div class ="progress-bar">
              <div class="outer">
                <div class="inner"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="right-bottom-section">
          <div class="dashboard-section">
            <h2>Accessories</h2>
            <button class="accessories-button">Watches</button>
            <button class="accessories-button">Watches</button>
            <button class="accessories-button">Watches</button>
            <button class="accessories-button">Watches</button>
        </div>
      </div>
    </div>

  </div>
  <script>
     const sustainabilityScoreValue = 78;
  </script>
  <script src="javascripts/dashboard.js"></script>
</body>
</html>
